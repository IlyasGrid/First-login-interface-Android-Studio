<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="custumbtn" parent="Widget.AppCompat.ActionButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="twitterbtn" parent="custumbtn">
        <item name="backgroundTint">@color/TwitterBlue</item>
    </style>

    <style name="facebookBtn" parent="custumbtn">
        <item name="backgroundTint">@color/deepBlue</item>
    </style>
    <style name="loginbtn" parent="custumbtn">
        <item name="backgroundTint">@color/lightblue</item>
    </style>

    <style name="custTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/sumo</item>
    </style>
    <style name="custumInput" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@color/grey</item>
    </style>
</resources>